<!--    "jdbc:mysql://localhost:3306/interview_assignment_db?serverTimezone=UTC&allowPublicKeyRetrieval=true&useSSL=false"-->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.mariadb.jdbc.Driver"/>
        <property name="url" value="jdbc:mariadb://127.0.0.1:3306/interview_assignment_db"/>
        <property name="username" value="root"/>
        <property name="password" value="pass"/>
    </bean>
    <!-- Mysql <-> Mybatis 를 연결해주는 객체 -->
    <bean id="sqlSessionFactoryBean" class="org.mybatis.spring.SqlSessionFactoryBean">
        <!-- DBCP(datebase connection pool) 주입 -->
<!--        <property name="dataSource" ref="dbcp"/>-->
        <property name="dataSource" ref="dataSource"/>
        <property name="configLocation" value="classpath:/config/mybatis-config.xml"/>
        <property name="mapperLocations" value="classpath:mappers/*.xml"/>
        <!-- Package에 별칭주기 -->
        <property name="typeAliasesPackage" value="com.board"/>
    </bean>

    <bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate" destroy-method="clearCache">
        <constructor-arg ref="sqlSessionFactoryBean"/>
    </bean>

    <!--4. IOC 설정 : <context:component-scan> :  IOC, DI, DL에 대한 설정-->
    <context:component-scan base-package="com.board.*" />

